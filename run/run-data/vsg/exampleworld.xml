<?xml version='1.0' encoding='UTF-8'?>
<world xmlns="https://dueca.tudelft.nl"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://dueca.tudelft.nl vsgworld.xsd">

  <!-- base for static objects -->
  <template key="carbase" type="static-transform" root="true">
    <param name="xyz">
      0, 10, 3
    </param>
    <param name="scalexyz">
      30, 30, 30
    </param>
    <param name="phithetapsi">
      0, 0, 0
    </param>
  </template>


  <template key="car" type="model">
    <file>Defender.glb</file>
  </template>

  <!-- controlled objects are all of type car? -->
  <template key="ObjectMotion" type="model" name="car #">
    <file>Defender.glb</file>
  </template>


  <!-- transform node to the car location -->
  <static name="car1base" parent="staticcars" type="static-transform">
    <param name="xyz">4, 2, 0</param>
  </static>

  <static name="car2base" parent="staticcars" type="static-transform">
    <param name="xyz">4, 2, 0</param>
  </static>


  <!-- car model linked to the transform -->
  <static name="car1" template="car" parent="car1base">
    <file>piper_pa18.glb</file>
  </static>

  <!-- car model linked to the transform -->
  <static name="car2" template="car" parent="car2base">
    <file>Defender.glb</file>
  </static>

  <static name="staticcars" type="switch">
    <param name="selected_child">0</param>
    <child>car1base</child>
    <child>car2base</child>
  </static>

  <static name="grass" type="static-model">
    <file>grass.glb</file>
  </static>

  <!-- world orientation -->
  <static name="world-base" root="true" type="tiled-transform">
    <param name="tilesizexyz">20.0, 20.0, 0.0</param>
    <param name="xyz"> 0, 0, 0.05 </param>
    <param name="phithetapsi">0, 0, 0 </param>
    <param name="scalexyz">100, 100, 100</param>
    <child>grass</child>
  </static>

  <!-- arrow orientation -->
  <static name="arrows" type="static-model">
    <file>arrows.glb</file>
  </static>

  <!-- world total -->
  <static name="arrow-base" root="true" type="static-transform">
    <param name="xyz"> 0, 0, 0 </param>
    <param name="phithetapsi">0, 0, 0 </param>
    <child>arrows</child>
  </static>


  <!-- helmet location -->
  <!--
  <static name="helmet-base" parent="root" type="static-transform">
    <param name="scalexyz"> 10, 10, 10 </param>
    <param name="xyz">2, 0, 0</param>
  </static>

  <static name="helmet" parent="helmet-base" type="static-model">
    <file>FlightHelmet.vsgb</file>
  </static>
  -->

  <!-- simple ambient light -->
  <static name="ambient" type="ambient-light" root="true">
    <param name="color"> 1, 1, 1</param>
    <param name="intensity"> 0.2 </param>
  </static>

  <static name="road" type="static-model">
    <file>myroad.glb</file>
  </static>

  <static name="road-base" root="true" type="static-transform">
    <param name="xyz">0, 0, 0</param>
    <child>road</child>
  </static>

  <static name="skydome" type="static-model">
    <file>skydome.glb</file>
  </static>

  <static name="skydomeloc" root="true" type="centered-transform">
    <param name="scalexyz">100, 100, 100</param>
    <param name="xyz">0, 0, 10</param>
    <child>skydome</child>
  </static>


  <!-- directed light -->
  <static name="sun" type="directional-light" root="true">
    <param name="color"> 1, 1, 1</param>
    <param name="intensity"> 0.4 </param>
    <param name="direction"> 0.2, -0.0, 0.7 </param>
  </static>

</world>