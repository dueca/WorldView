<?xml version="1.0"?>

<PropertyList>
  <sim>
    <rendering>
      <camera-group>

        <!-- front projector 1x HD -->
        <window>
          <name type="string">front</name>
          <host-name type="string"></host-name>
          <display>0</display>
          <screen>0</screen>
          <width>1920</width>
          <height>1080</height>
          <fullscreen type="bool">true</fullscreen>
        </window>

        <!-- front projection from frustumcalc.py -->
        <camera>
          <window>
            <name>front</name>
          </window>
          <viewport>
            <x>0</x>
            <y>0</y>
            <width>1796</width>
            <height>1080</height>
          </viewport>
          <frustum>
            <left>-1.1713778</left>
            <right>0.724227</right>
            <bottom>-0.47927</bottom>
            <top>0.6606</top>
            <near>1.0</near>
            <far>120000.0</far>
          </frustum>
          <view>
            <heading-deg type="double">0.0</heading-deg>
          </view>
          <!-- projects onto texture -->
          <texture>
            <name>texture-front</name>
            <width>1796</width>
            <height>1080</height>
          </texture>
        </camera>

        <!-- distortion projection using tech
             from https://github.com/viktorradnai/screenwarp
             file created from mask file with fggenerate.py -->
        <camera>
          <name type="string">distCam-front</name>
          <window>
            <name>front</name>
          </window>
          <viewport>
            <x>62</x>
            <y>0</y>
            <width>1796</width>
            <height>1080</height>
          </viewport>
          <ortho>
            <top>1080</top>
            <bottom>0</bottom>
            <left>0</left>
            <right>1796</right>
            <near>-1.0</near>
            <far>1.0</far>
          </ortho>
          <panoramic-spherical>
            <texture>texture-front</texture>
            <file>hmilabmaskfront-blur.warp</file>
          </panoramic-spherical>
        </camera>
        <!-- can we do without gui??? -->
        <gui>
          <window>
            <name type="string">front</name>
          </window>
        </gui>
      </camera-group>
    </rendering>
  </sim>
</PropertyList>